package Applic;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.text.Position;

import java.awt.Dimension;
import java.awt.Color;
import java.awt.GridLayout;

public class Interface {
    public static void main(String[] arg) {	
	JFrame cadre = new javax.swing.JFrame("Main Menu");
	JPanel panneau = new JPanel();
	JPanel red = new JPanel();
	red.setBackground(Color.red);
	JPanel yellow = new JPanel();
	yellow.setBackground(Color.yellow);
	JPanel pann4 = new JPanel();
	pann4.setBackground(Color.green);
	cadre.setPreferredSize(new Dimension(800, 800));
	//panneau.setPreferredSize(new Dimension(800, 800));
	GridLayout experimentLayout = new GridLayout(0,4);
	cadre.setLayout(experimentLayout);
	cadre.add(red);
	cadre.add(yellow);
	cadre.add(pann4);
	cadre.add(panneau);
	cadre.pack();
	cadre.setVisible(true);
	cadre.setLocationRelativeTo(null);
	cadre.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
    }
}